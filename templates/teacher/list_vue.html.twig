{% extends 'base.html.twig' %}

{% block title %}Teachers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Teachers</h1>
            <div>
                <a href="{{ path('web_teacher_create') }}" class="btn btn-primary me-2">Add Teacher</a>
                <a href="{{ path('web_teacher_list') }}" class="btn btn-outline-secondary">Switch to Regular View</a>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div data-teachers="{{ teachers_json|escape('html_attr') }}">
            <app></app>
        </div>
    </div>
{% endblock %}
