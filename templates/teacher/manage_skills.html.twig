{% extends 'base.html.twig' %}

{% block title %}Manage Teacher Skills{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0">Manage Skills for {{ teacher.first_name }} {{ teacher.last_name }}</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Skill</th>
                                            <th>Proficiency Level</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for skill in all_skills %}
                                            <tr>
                                                <td>{{ skill.name }}</td>
                                                <td>
                                                    <select name="skill_levels[{{ skill.id }}]" class="form-select">
                                                        <option value="0">Not Selected</option>
                                                        {% for level in 1..5 %}
                                                            <option value="{{ level }}" 
                                                                {% if skill.id in teacher_skills|keys and teacher_skills[skill.id] == level %}
                                                                    selected
                                                                {% endif %}>
                                                                Level {{ level }}
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('web_teacher_list') }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i>Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add any custom JavaScript for skill management here
        });
    </script>
{% endblock %}
