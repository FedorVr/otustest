{% extends 'base.html.twig' %}

{% block title %}Manage Groups for {{ teacher.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Manage Groups for {{ teacher.name }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Available Groups</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                {% for group in all_groups %}
                                    <div class="form-check">
                                        <input type="checkbox" 
                                               class="form-check-input" 
                                               name="groups[]" 
                                               value="{{ group.id }}"
                                               id="group_{{ group.id }}"
                                               {% if group in teacher.teachingGroups %}checked{% endif %}
                                               {% if not teacher.hasRequiredSkills(group) %}disabled{% endif %}>
                                        <label class="form-check-label" for="group_{{ group.id }}">
                                            {{ group.name }}
                                            {% if not teacher.hasRequiredSkills(group) %}
                                                <span class="text-danger">(Missing required skills)</span>
                                            {% endif %}
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Teacher Skills</h5>
                        </div>
                        <div class="card-body">
                            {% if teacher.skills is not empty %}
                                <ul class="list-group">
                                    {% for skill_proficiency in teacher.skills %}
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            {{ skill_proficiency.skill.name }}
                                            <span class="badge bg-primary rounded-pill">Level {{ skill_proficiency.level }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="text-muted">No skills assigned yet</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="{{ path('web_teacher_list') }}" class="btn btn-secondary">Back to Teachers</a>
            </div>
        </form>
    </div>
{% endblock %}
